@{
    ViewBag.Title = "Dashboard";
}

<h1><strong>Users</strong></h1>


@Html.Partial("_CreateUser")


<br /><br />
    <table class="table">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hire Date</th>
            <th>Max Days</th>
        </tr>
        <tbody data-bind="foreach: users">
            <tr>
                <td data-bind="text:email"> </td>
                <td data-bind="text:firstname"> </td>
                <td data-bind="text:lastname"> </td>
                <td data-bind="text:hiredate"> </td>
                <td data-bind="text:maxdays"> </td>
                <td><button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal" data-bind="click:$root.UpdateUser">Edit</button></td>
            </tr>
        </tbody>
        </table>

