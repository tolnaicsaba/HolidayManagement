@{
    ViewBag.Title = "Dashboard";
}

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Create new user</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="firstname" class="form-control-label">First Name:</label>
                        <input type="text" class="form-control" id="firstname">
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="form-control-label">Last Name:</label>
                        <input type="text" class="form-control" id="lastname">
                    </div>
                    <div class="form-group">
                        <label for="hiredate" class="form-control-label">Hire Date:</label>
                        <input type="text" class="form-control" id="hiredate">
                    </div>
                    <div class="form-group">
                        <label for="maxdays" class="form-control-label">Maximum count of available days:</label>
                        <input type="number" class="form-control" id="maxdays">
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Select your Team
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <select class="selectpicker" data-bind="foreach: teams">
                                <option data-bind="text: Description"> </option>
                            </select>
                        </div>
                    </div>
                    <br /><br /><br />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Create new User</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
